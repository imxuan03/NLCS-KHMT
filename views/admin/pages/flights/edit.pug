extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    +alert-error(5000)
    +alert-success(5000)
    h2(class="mb-4") Chỉnh sửa chuyến bay

    form(
        action=`/${prefixAdmin}/flights/edit/${record.id}?_method=PATCH`
        id="form-create-flight"
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="title") Chuyến bay
            input(
                type="text"
                class="form-control col-8"
                id="title"
                name="title"
                placeholder="TP HCM - Cần Thơ"
                required
                value=record.title
            )
        div(class="form-group")
            label(for="desc") Mô tả
            textarea(
                class="form-control col-8"
                id="desc"
                name="description"
                rows="5"
            ) !{record.description}
        div(class="form-group")
            label(for="price") Giá
            input(
                type="number"
                class="form-control col-3"
                id="price"
                name="price"
                min="0" 
                value=record.price     
            )
        .row 
            div(class="form-group col-6")
                label(for="departureCity") Điểm khởi hành
                input(
                    type="text"
                    class="form-control"
                    id="departureCity"
                    name="departureCity" 
                    value=record.departureCity   
                )
            div(class="form-group col-3")
                label(for="departureDate") Ngày khởi hành
                input(
                    type="date"
                    class="form-control"
                    id="departureDate"
                    name="departureDate"  
                    value=record.departureDate       
                )
            div(class="form-group col-3")
                label(for="departureTime") Thời gian khởi hành
                input(
                    type="time"
                    class="form-control"
                    id="departureTime"
                    name="departureTime"   
                    value=record.departureTime      
                )
        .row 
            div(class="form-group col-6")
                label(for="arrivalCity") Điểm đến
                input(
                    type="text"
                    class="form-control"
                    id="arrivalCity"
                    name="arrivalCity"      
                    value=record.arrivalCity 
                )
            div(class="form-group col-3")
                label(for="arrivalDate") Ngày đến
                input(
                    type="date"
                    class="form-control"
                    id="arrivalDate"
                    name="arrivalDate"  
                    value=record.arrivalDate     
                )
            div(class="form-group col-3")
                label(for="arrivalTime") Thời gian đến
                input(
                    type="time"
                    class="form-control"
                    id="arrivalTime"
                    name="arrivalTime"      
                    value=record.arrivalTime
                )
            
        div(class="form-group")
            label(for="availableSeats") Số lượng ghế
            input(
                type="number"
                class="form-control col-3"
                id="availableSeats"
                name="availableSeats"
                min="0"   
                value=record.availableSeats   
            )
        div(
            class="form-group"
            upload-image
        )
            label(for="thumbnail") Ảnh
            input(
                type="file"
                class="form-control-file"
                id="thumbnail"
                name="thumbnail"
                accept="image/*"
                upload-image-input
            )
            if(record.thumbnail)
                img(
                    src=record.thumbnail
                    class="image-preview"
                    upload-image-preview
                )
            else 
                img(
                    src="/admin/images/avatarAlter/flightAlter.jpg"
                    class="image-preview"
                    upload-image-preview
                )
        div(class="form-group")
            label(for="position") Vị trí
            input(
                type="number"
                class="form-control col-3"
                id="position"
                name="position"
                placeholder="Tự động tăng"
                min="1"
                value=record.position 
            )
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked=(record.status == "active" ? true : false)
            )
            label(for="statusActive" class="form-check-label") Hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInActive"
                name="status"
                value="inactive"
                checked=(record.status == "inactive" ? true : false)
            )
            label(for="statusInActive" class="form-check-label") Dừng hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật

        
        