extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug

block main 

    h2(class="mb-4") Danh sách chuyến bay
    .card.mb-3 
        .card-header Bộ lọc và Tìm kiếm 
        .card-body
            .row 
                .col-6
                    +filter-status(filterStatus)
                .col-6 
                    +search(keyword)
                

    .card.mb-3 
        .card-header Danh sách 
        .card-body
            table(
                class="table table-hover table-sm"
            )
                thead 
                    tr
                        th STT
                        th Hình ảnh
                        th Chuyến 
                        th Giá
                        th Ngày đi - Ngày đến
                        th Số lượng chỗ
                        th Trạng thái 
                        th Vị trí
                        th Hành động

                tbody 
                    if(flights.length>0)
                        each item, index in flights
                            tr 
                                td #{index+1}
                                td 
                                    img(src=item.thumbnail, alt=item.title width="100px" height="auto")
                                td #{item.title}
                                td #{item.price}$
                                td 
                                    div Khởi hành: #{item.departureDate} , #{item.departureTime}
                                    div Đến: #{item.arrivalDate} , #{item.arrivalTime}
                                td #{item.availableSeats}
                                td
                                    if(item.status == "active")
                                        button(class="badge badge-success"
                                            button-change-status
                                            data-status=item.status 
                                            data-id=item.id        
                                        ) Hoạt động
                                    else 
                                        button(class="badge badge-danger"
                                            button-change-status
                                            data-status=item.status 
                                            data-id=item.id    
                                        ) Dừng Hoạt động 
                                td #{item.position} 
                                td 
                                    a(
                                        href=`/${prefixAdmin}/flights/detail/${item.id}`
                                        class="btn btn-secondary btn-sm"
                                    ) Chi tiết
                                    a(
                                        href=`/${prefixAdmin}/flights/edit/${item.id}`
                                        class="btn btn-warning btn-sm"
                                    ) Sửa
                                    button(
                                        class="btn btn-danger btn-sm ml-1"
                                        button-delete 
                                        data-id = item.id
                                    ) Xóa 

                    else 
                        tr 
                            td(colspan="7" class="text-center") Không có sản phẩm nào
