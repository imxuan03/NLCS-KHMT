extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    h2(class="mb-4") Chỉnh sửa tài khoản

    +alert-success(4000)
    +alert-error(4000)

    form(
        action=`/${prefixAdmin}/accounts/edit/${record.id}?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="fullName") Họ tên *
            input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                value=record.fullName
                required
            )
        div(class="form-group")
            label(for="email") Email *
            input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                value=record.email
                required
            )
        div(class="form-group")
            label(for="password") Mật khẩu *
            input(
                type="password"
                class="form-control"
                id="password"
                name="password"
            )
        div(class="form-group")
            label(for="phone") Số điện thoại
            input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
                value=record.phone
            )
        div(
            class="form-group"
            upload-image
        )
            label(for="avatar") Ảnh đại diện
            input(
                type="file"
                class="form-control-file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input
            )
            img(
                src=record.avatar
                class="image-preview"
                upload-image-preview
            )
            //- ////=============== 
        p Quyền truy cập
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="role_admin"
                name="role_id"
                value="admin"
                checked=(record.role_id == "admin" ? true : false)
            )
            label(for="role_admin" class="form-check-label") Quản trị viên
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="role_content_admin"
                name="role_id"
                value="contentAdmin"
                checked=(record.role_id == "contentAdmin" ? true : false)
            )
            label(for="role_content_admin" class="form-check-label") Quản trị nội dung
        br
            //- ==/////////================== 
        p Trạng thái 
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked=(record.status == "active" ? true : false)
            )
            label(for="statusActive" class="form-check-label") Hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInActive"
                name="status"
                value="inactive"
                checked=(record.status == "inactive" ? true : false)
            )
            label(for="statusInActive" class="form-check-label") Dừng hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật