extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main

    +alert-success(4000)
    +alert-error(4000)


    style. 
        .form-forgot-password-user{
                background-color: #ffffff;
                border: 1px solid #ccc;
                border-radius: 5px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                padding: 40px 20px;
                //- .col-md-5.col-xl-4
                position: relative;
                top: 80px;
            }



    .container
        .row.justify-content-center
            .col-8.col-md-5.col-xl-4.form-forgot-password-user
                h2(class="text-center") Nhập mã OTP xác thực

                form(
                    action=`/user/password/otp`
                    method="POST"
                )
                    div(class="form-group")
                        label(for="email") Email
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            required 
                            readonly
                            value=email
                    )
                    div(class="form-group")
                        label(for="otp") Mã OTP *
                        input(
                            type="text"
                            class="form-control"
                            id="otp"
                            name="otp"
                            required
                     )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-dark btn-block login-submit-btn"
                        ) Xác thực