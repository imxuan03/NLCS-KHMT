extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main

    +alert-success(4000)
    +alert-error(4000)


    style. 
        .form-forgot-password-user{
            background-color: #ffffff;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 40px 20px;
            //- .col-md-5.col-xl-4
            position: relative;
            top: 100px;
        }


    .container
        .row.justify-content-center
            .col-8.col-md-5.col-xl-4.form-forgot-password-user
                h2(class="text-center") Quên mật khẩu
                form(
                    action=`/user/password/forgot`
                    method="POST"
                )
                    div(class="form-group")
                        label(for="email") Email
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            required
                        )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                        ) Gửi mail xác nhận