extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main

    +alert-success(4000)
    +alert-error(4000)

    .container
        .row.justify-content-center
            .col-8.col-md-5.col-xl-4
                h2(class="text-center") Lấy lại mật khẩu
                form(
                    action=`/user/password/forgot`
                    method="POST"
                )
                    div(class="form-group")
                        label(for="email") Email
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            required
                        )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                        ) Gửi mail xác nhận