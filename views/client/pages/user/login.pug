extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main

    +alert-success(4000)
    +alert-error(4000)

    .container
        .row.justify-content-center
            .col-8.col-md-5.col-xl-4
                h2(class="text-center") Đăng nhập tài khoản
                form(
                    action=`/user/login`
                    method="POST"
                    style="max-width:350px;"
                )
                    div(class="form-group")
                        label(for="email") Email
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            required
                        )
                    div(class="form-group")
                        label(for="password") Password
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                            required
                        )

                    div(class="form-group")
                        a(href="/user/password/forgot" class="mb-3") Quên mật khẩu?

                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                        ) Đăng nhập
                    
                div(class="form-group")
                    a(href="/user/register" class="mb-3") Đăng ký tài khoản mới   