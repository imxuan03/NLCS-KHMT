extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main

    +alert-success(4000)
    +alert-error(4000)

    style. 
        .form-detail-infor-user{
            background-color: #ffffff;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 50px 20px 0 20px;
            //- .col-md-5.col-xl-4
        }
        .form-avt-infor-user{
            background-color: #ffffff;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

    .container.pb-3.pt-3
        h2(class="mb-4") Thông tin chi tiết tài khoản
        .detail-account 
            .detail-desc-account.form-detail-infor-user
                div(class="form-group")
                    label(for="fullName") Họ tên 
                    input(
                        type="text"
                        class="form-control"
                        id="fullName"
                        name="fullName"
                        value=user.fullName
                        readonly
                    )
                div(class="form-group")
                    label(for="email") Email 
                    input(
                        type="email"
                        class="form-control"
                        id="email"
                        name="email"
                        value=user.email
                        readonly
                    )
                div(class="form-group")
                    label(for="password") Mật khẩu 
                    input(
                        type="password"
                        class="form-control"
                        id="password"
                        name="password"
                        readonly
                    )
                div(class="form-group")
                    label(for="phone") Số điện thoại
                    input(
                        type="text"
                        class="form-control"
                        id="phone"
                        name="phone"
                        value=user.phone
                        readonly
                    )
                p Trạng thái 
                div(class="form-group form-check form-check-inline")
                    input(
                        type="radio"
                        class="form-check-input"
                        id="statusActive"
                        name="status"
                        value="active"
                        checked=(user.status == "active" ? true : false)
                        disabled 
                    )
                    label(for="statusActive" class="form-check-label") Hoạt động
                div(class="form-group form-check form-check-inline")
                    input(
                        type="radio"
                        class="form-check-input"
                        id="statusInActive"
                        name="status"
                        value="inactive"
                        checked=(user.status == "inactive" ? true : false)
                        disabled 
                    )
                    label(for="statusInActive" class="form-check-label") Dừng hoạt động
                div 
                    a(
                        href=`/user/edit`
                        class="btn btn-primary"
                    ) Chỉnh sửa thông tin cá nhân
            .detail-avatar-account.form-avt-infor-user
                .detail-avatar-account-detail
                    h6 Ảnh đại diện
                .detail-avatar-account-img
                    if(user.avatar)
                        img(src=user.avatar, class="avatar" alt="")
                    else 
                        img(src="/images/avatarAlter/userAvatar.jpg", class="avatar" alt="")

