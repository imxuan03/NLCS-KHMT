extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main

    +alert-success(4000)
    +alert-error(4000)

    .container
        .row.justify-content-center
            .col-8.col-md-5.col-xl-4
                h2(class="text-center") Đổi mật khẩu

                form(
                    action=`/user/password/reset`
                    method="POST"
                )
                    div(class="form-group")
                        label(for="password") Mật khẩu mới
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                            required 
                    )
                    div(class="form-group")
                        label(for="confirmPassword") Xác nhận mật khẩu
                        input(
                            type="password"
                            class="form-control"
                            id="confirmPassword"
                            name="confirmPassword"
                            required 
                    )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                        ) Đổi mật khẩu