extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main

    +alert-success(4000)
    +alert-error(4000)

    style. 
        .form-edit-infor-user{
            background-color: #ffffff;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            //- .col-md-5.col-xl-4
        }


    .container.pt-3.pb-3
        .row.justify-content-center
            .col-7.form-edit-infor-user
                h2(class="mb-4") Chỉnh sửa tài khoản
                form(
                    action=`/user/edit?_method=PATCH`
                    method="POST"
                    enctype="multipart/form-data"
                    style="max-width:600px;"
                    class="pb-3"
                )
                    div(class="form-group")
                        label(for="fullName") Họ tên 
                        input(
                            type="text"
                            class="form-control"
                            id="fullName"
                            name="fullName"
                            value=user.fullName
                            required
                        )
                    div(class="form-group")
                        label(for="email") Email 
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            value=user.email
                            required
                        )
                    div(class="form-group")
                        label(for="password") Mật khẩu 
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                        )
                    div(class="form-group")
                        label(for="phone") Số điện thoại
                        input(
                            type="text"
                            class="form-control"
                            id="phone"
                            name="phone"
                            value=user.phone
                        )
                    div(
                        class="form-group"
                        upload-image
                    )
                        label(for="avatar") Ảnh đại diện
                        input(
                            type="file"
                            class="form-control-file"
                            id="avatar"
                            name="avatar"
                            accept="image/*"
                            upload-image-input
                        )
                        if(user.avatar)
                            img(
                                src=user.avatar
                                class="image-preview"
                                upload-image-preview
                            )
                        else 
                            img(
                                src="/admin/images/avatarAlter/userAvatar.jpg"
                                class="image-preview"
                                upload-image-preview
                            )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary"
                        ) Cập nhật